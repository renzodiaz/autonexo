<div class="registerPage">
  <div class="container">
    <div class="formContainer">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :firstname, class: 'labelBg' %>
            <%= f.text_field :firstname, placeholder: 'Firstname' %>
          </div>

          <div class="field">
            <%= f.label :lastname, class: 'labelBg' %>
            <%= f.text_field :lastname, placeholder: 'Lastname' %>
          </div>

          <div class="field">
            <%= f.label :phone_number, class: 'labelBg' %>
            <%= f.text_field :phone_number, placeholder: 'Phone Number' %>
          </div>

          <div class="field">
            <%= f.label :email, class: 'labelBg' %>
            <%= f.email_field :email, autofocus: true, placeholder: 'example@example.com' %>
          </div>

          <div class="field">
            <%= f.label :password, class: 'labelBg' %>
            <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", placeholder: '******' %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, class: 'labelBg' %>
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: '******' %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: 'button buttonOrange' %>
          </div>

      <% end %>
      <div class="shareLinks">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
