<div class="loginPage">
  <div class="container">
    <div class="formContainer">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :email, class: 'labelBg' %><br />
            <%= f.email_field :email, autofocus: true, placeholder: 'example@example.com' %>
          </div>

          <div class="actions">
            <%= f.submit "Send me reset password instructions", class: 'button buttonOrange' %>
          </div>
      <% end %>
      <div class="shareLinks">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>